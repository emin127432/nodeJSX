<h1>dobavit kursi</h1>

<form action="/add" method="post">
    <div class="input-field ">
          <input  id="title" name="title" type="text" class="validate" required>
          <label for="title">name kurs</label>
        <span class="helper-text" data-error="Bbedit cenu"></span>

        </div>

    <div class="input-field ">
          <input  id="price" name="price" type="number" class="validate" required min="1">
          <label for="price">cena kurs</label>
          <span class="helper-text" data-error="Bbedit cenu"></span>
        </div>

    <div class="input-field ">
          <input  id="img" name="img" type="text" class="validate" required>
          <label for="img">URL kartinka</label>
          <span class="helper-text" data-error="Bbedit URl kartinki"></span>
        </div>

        <button class="btn btn-primary">dabavit kurs</button>
</form>